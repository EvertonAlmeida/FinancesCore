@model IEnumerable<FinancesCore.App.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Category List";
}

<h3>@ViewData["Title"]</h3>
<hr />
<vc:Summary></vc:Summary>

<p supress-by-claim-name="Category" supress-by-claim-value="Add">
    <a class="btn btn-info" asp-action="Create">New Category</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-right">
                    <a class="btn btn-warning" asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                    <a disable-by-claim-name="Category" disable-by-claim-value="Edit" class="btn btn-info" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                    <a disable-by-claim-name="Category" disable-by-claim-value="Delete" class="btn btn-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
